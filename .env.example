# Example .env file for Bengali/English RAG Chatbot

# OCR and Embedding
OCR_LANG=ben+eng
EMBEDDING_MODEL=intfloat/multilingual-e5-base

# LLM Provider (optional)
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB (for persistent vector storage)
MONGODB_URI=mongodb+srv://username:password@host/dbname?retryWrites=true&w=majority&authSource=admin

# Pinecone (optional, for vector DB)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_index_name
PINECONE_INDEX_HOST=your_index_host_url
